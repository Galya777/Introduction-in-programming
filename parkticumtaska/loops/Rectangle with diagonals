#include<iostream>
using namespace std;

int main()
{
    int number;
    cin >> number;
       
    for (int i = 1; i < number+1; ++i) {
        int j = 1; 
       while(j < number+1) {
           if (j == 1 || i == 1 || i == number || j == number) {
               cout<< j;
           }
           else if(i==j||j==number-i){  
                cout<< j;
            } else {
                cout << " ";
            }
            
            ++j;
        }
       cout << endl;
    }
   
    return 0;
}
